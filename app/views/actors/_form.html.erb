<%= simple_form_for @actor, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Actor</legend>

    <%= f.input :name_ru %>

    <%= f.input :name_en %>

    <%= f.association :country, :include_blank => false %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', actors_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
