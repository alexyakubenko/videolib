<% title = if action_name == "show_last_movies"
             "Year from #{ params[:year_from] } "
           elsif action_name == "show_genre_search"
             "Genre Percentage Start from #{ params[:percentage_from] } "
           else
             ""
           end%>
<h1><%= title %>Movies</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name(ru)</th>
      <th>Name(en)</th>
      <th>Year</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.id %></td>
        <td><%= link_to movie.name_ru, movie %></td>
        <td><%= link_to movie.name_en, movie %></td>
        <td><%= movie.year %></td>
        <td>
          <%= link_to 'Edit', edit_movie_path(movie), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', movie_path(movie), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_movie_path, :class => 'btn btn-primary' %>
