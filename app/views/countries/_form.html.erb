<%= simple_form_for @country, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Country</legend>

    <%= f.input :name_ru %>

    <%= f.input :name_en %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', countries_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
