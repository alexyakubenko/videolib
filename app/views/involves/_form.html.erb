<%= simple_form_for @involve, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <legend><%= controller.action_name.capitalize %> Involve</legend>

      <%= f.input :name %>

      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', involves_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
