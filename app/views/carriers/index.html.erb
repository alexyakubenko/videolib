<h1>Carriers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Movie count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= carrier.id %></td>
        <td><%= link_to carrier.name, carrier_path(carrier) %></td>
        <td><%= carrier.movies.count %></td>
        <td>
          <%= link_to 'Edit', edit_carrier_path(carrier), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', carrier_path(carrier), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_carrier_path, :class => 'btn btn-primary' %>
